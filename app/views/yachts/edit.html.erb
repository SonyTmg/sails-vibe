<div class="container">
  <h1 class="h2 text-center">Edit your Yacht</h1>
  <div class="row justify-content-center">
    <div class="col col-lg-5">
      <%= form_for @my_yacht do |f| %>
        <%= f.label       :name %>
        <%= f.text_area   :name %>
        <%= f.label       :price %>
        <%= f.text_area   :price %>
        <%= f.label       :description %>
        <%= f.text_area   :description %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
