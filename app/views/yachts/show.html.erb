<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= @yacht.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-lg-8">
      <div class="row">
        <div class="col-12 col-lg-9">
          <img src="<%= url_for(@yacht.photos[0]) %>" alt="" class="img-fluid img-object-fit-cover">
        </div>
        <div class="col-12 col-lg-3 gap-2 d-flex flex-column">
          <img src="<%= url_for(@yacht.photos[1]) %>" alt="" class="img-fluid">
          <img src="<%= url_for(@yacht.photos[2]) %>" alt="" class="img-fluid">
          <img src="<%= url_for(@yacht.photos[3]) %>" alt="" class="img-fluid">
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-4 border border-3 p-4">
      <div class="row flex-column">
        <div class="col-12">
          <div class="row mb-4">
            <div class="col-12">
              <p class="h2 text-center">
                $<%= @yacht.price %>AUD
              </p>
            </div>
            <div class="col-12 text-center">
              ⭐️⭐️⭐️⭐️
            </div>
          </div>
        </div>
        <div class="col-12">
          <p>
            <%= @yacht.description %>
            </p>
        </div>
        <div class="col-12">
          <div class="row">
            <div class="col-12 col-lg-6">
              <label for="">From</label>
              <input type="date" class="form-control">
            </div>
            <div class="col-12 col-lg-6">
              <label for="">To</label>
              <input type="date" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-12 mt-4">
          <button class="btn-submit">
            Book Now
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
