<div class="wrap">
  <%#= image_tag "background.jpeg", class:"background-image bg-2" %>
  <div class="container d-flex justify-content-center gap-3 flex-wrap py-5 ">
    <% @yachts.each do |yacht| %>
      <%= link_to yacht_path(id: yacht.id), class:"text-decoration-none text-black" do %>
        <div class="card">
          <img src="<%= url_for(yacht.photos[0]) %>" alt="" class="img-fluid img-object-fit-cover card-img-top">
          <div class="card-body py-2 px-3">
            <div class="card-title">
              <h1><%= yacht.name %></h1>
            </div>
            <div class="card-divider">
              <div class="card-content">
                <i class="fa-solid fa-location-dot"></i>
                <p> $<%= yacht.price %> /day</p>

                <p> <%= yacht.description.truncate(40) %> </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['pk.eyJ1IjoiZXJ2aW5hdGhlcmVzYSIsImEiOiJjbDBhOWhqcXMwbDN4M2NtZzY1ZXd4YWxlIn0.biMHmiflvaKOKMjZ2FA3IQ'] %>"></div>
</div>
