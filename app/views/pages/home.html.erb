<div class="bg">
  <div class="container d-flex flex-column h-50 justify-content-center mt-5">
    <div class="row justify-content-center">
      <div class="col col-lg-6">
        <h1> <%= link_to 'Sail Vibe', yachts_path, class:"text-decoration-none text-white" %> </h1>
        <div class="mb-3">
          <%= form_tag yachts_path, method: :get, class:"input-group" do %>
            <%= text_field_tag :query, params[:query], class: "form-control bg-light bg-gradient bg-opacity-10 text-white", placeholder: "Search by Yacht name or Location" %>
            <div class="input-group-append"><%= submit_tag "Search", class:"btn btn-outline-light" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
